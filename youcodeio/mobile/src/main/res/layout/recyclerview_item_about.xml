<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/picture"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_youcodeio"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/about_dev_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_alignParentStart="true"
        style="@style/style_text_title_about_16sp_bold"
        tools:text="@string/conferences_title"/>

    <TextView
        android:id="@+id/about_dev_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_56dp"
        android:layout_below="@id/about_dev_name"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_13sp"
        tools:text="@string/conferences_subtitle"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/about_dev_skills"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_56dp"
        android:layout_below="@id/about_dev_name"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_13sp"
        tools:text="@string/conferences_subtitle"
        android:maxLines="2"
        android:ellipsize="end"/>

    <ImageButton
        android:id="@+id/contextual_menu_about"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:padding="@dimen/padding_8dp"
        android:background="@null"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>