<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/search_video_logo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher_youcodeio"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_16dp"/>

    <TextView
        android:id="@+id/search_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_alignParentStart="true"
        style="@style/style_text_title_16sp_bold"
        tools:text="@string/conferences_title"/>

    <TextView
        android:id="@+id/search_video_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="@dimen/margin_72dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        android:layout_below="@id/search_video_title"
        android:textColor="@color/grey"
        android:textSize="@dimen/text_size_13sp"
        tools:text="@string/conferences_subtitle"
        android:maxLines="2"
        android:ellipsize="end"/>

</RelativeLayout>